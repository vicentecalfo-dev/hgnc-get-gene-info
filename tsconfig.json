{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "target": "ES6",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "sourceMap": true,
        "allowJs": false,
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "rollup.config.js"
    ]
}